<!DOCTYPE html>
<html>
<head>
<title><%= (locals.title!=null? locals.title:"Login") %></title> <% include common/header.ejs %>
</head>
<body>
	<div class="container">
		<div class="panel  panel-custom panel-login">
			<div class="panel-body">
				<h3 class="text-center">Login to your account</h3>
				<br>
				<form class="form-horizontal" role="form"
					action="/authenticatelogin" method="post">
					 
					<%if(locals.error!==null && locals.error==="true"){%>
					<div class="error" role="alert" >
						<span class="glyphicon glyphicon-exclamation-sign"
							aria-hidden="true"></span> <span class="sr-only">Error:</span>
						<%=msg%>
					</div>
					<%}%>
					<div class="form-group">
						<div class="col-sm-12">
							<div class="input-group margin-bottom-sm">
								<span class="input-group-addon input-group-addon-cust"><i
									class="fa fa-envelope-o " aria-hidden="true"></i></span> <input
									type="email" class="form-control" id="email" name="email"
									placeholder="Email Address" required>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-12">
							<div class="input-group">
								<span class="input-group-addon input-group-addon-cust"><i
									class="fa fa-key" aria-hidden="true"></i></span> <input
									type="password" class="form-control" id="pwd" name="password"
									placeholder="Password" required>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-10">
							<div class="checkbox">
								<label><input type="checkbox" tabindex='5'>
									Remember me</label>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12 col-md-12">
							<div class="text-center">
								<button type="submit" class="btn  btn-lg btn-block btn-success"
									id="singlebutton">Login</button>

							</div>
						</div>
					</div>
				</form>

			</div>
			<div class="panel-footer text-center">
				    <a href="/registration" class="btn">Register</a> | <a
					href="/registration" class="btn">Forgot Password</a>
			</div>
		</div>
	</div>
</body>
</html>