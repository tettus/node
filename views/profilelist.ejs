 <% include common/header.ejs %>

<html>
<head>

<link rel="stylesheet"
	href="https://cdn.datatables.net/1.10.11/css/dataTables.bootstrap.min.css">
<script>
	$(document).ready(function() {
		$('#profiles').DataTable();

	});
</script>

</head>


<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-12">
						<div class="panel  panel-custom ">
							<div class="panel-body">
								<form class="form-inline" role="form" action="/searchprofiles"
									method="get">
									<div class="form-group">
										<label for="userid" class="sr-only">User Id</label>
										<div class="input-group ">
										 <span
											class="input-group-addon input-group-addon-cust"> <i
											class="fa fa-user" aria-hidden="true"></i>
										</span> <input type="text" class="form-control" id="userid"
											name="userid" placeholder="User Id">
											</div>
									</div>
									<div class="form-group">
										<label for="star" class="sr-only">Star</label> 
										<div class="input-group ">
										<span
											class="input-group-addon input-group-addon-cust"><i
											class="fa fa-star" aria-hidden="true"></i></span> <input type="text"
											class="form-control" id="text" name="star" placeholder="Star">
											</div>
									</div>
									<div class="form-group">
										<button type="submit" class="btn btn-success"
											id="singlebutton">
											Search <i class="fa fa-search" aria-hidden="true"></i>
										</button>
									</div>

								</form>

							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<div class="panel  panel-custom ">
							<div class="panel-body">
								<table id="profiles" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>ID</th>
											<th>Name</th>
											<th>D.O.B</th>
											<th class="hidden-xs">Star</th>
										</tr>
									</thead>
									<tbody>

										<%if(locals.data){ for( var o in data){ var user= data[o]; %>
										<tr>
											<td>&nbsp;<%=user.userid%></td>
											<td>&nbsp;<%=user.fullname%></td>
											<td>&nbsp;</td>
											<td class="hidden-xs">&nbsp;</td>
										</tr>
										<%} }%>
									</tbody>
								</table>

							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
	<script
		src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
	<script
		src="https://cdn.datatables.net/1.10.11/js/dataTables.bootstrap.min.js"></script>


</body>
</html>