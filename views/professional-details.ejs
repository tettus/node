<div class="header">Professional Details</div>

<div class="form-group">
	<label for="fullname">Qualification *</label> <input type="text"
		class="form-control" id="qualification" name="qualification" desc="Qualification"
		placeholder="Enter educational qualification (Required)" required-field parent-div="page3"
		value='<%=locals.user!=undefined? user.qualification:""%>'>
</div>
<div class="form-group">
	<label for="dob">Working In</label> <input type="text"
		class="form-control" id="workingIn" name="workingIn"
		value='<%=locals.user!=undefined? user.workingAt:""%>'
		placeholder="Company you are working in? (optional)">
</div>

<div class="form-group">
	<label for="dob">Current City</label> <input type="text"
		class="form-control" id="currentcity" name="currentcity" desc="City" required-field
		parent-div="page3"
		value='<%=locals.user!=undefined? user.currentcity:""%>'
		placeholder="City residing in (Required)">
</div>

<div class="form-group">
	<label for="height">Salary</label> 
	<input type="text"
		class="form-control" id="salary" name="salary"
		value='<%=locals.user!=undefined? user.salary:""%>'
		placeholder="Salary per month(optional)">
	
</div>

<div class="form-group">
	<label for="weight">Expectation</label> <textarea  
		class="form-control" id="expectation" name="expectation"
		placeholder="Expectation about spouse(optional)"><%=locals.user!=undefined? user.expectation:""%></textarea>
</div>
